<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/batch"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

    <step id="bookStep">
        <tasklet ref="createBookTasklet" transaction-manager="transactionManager"/>
    </step>

    <beans:bean id="createBookTasklet" class="biblio.book.BookTasklet" scope="step">
        <beans:property name="resource" value="#{jobParameters['fileName']}"/>
        <beans:property name="bookDao" ref="bookDao"/>
    </beans:bean>
</beans:beans>


