<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/batch"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

    <step id="sentenceStep">
        <tasklet transaction-manager="transactionManager">
            <chunk reader="itemReader" writer="mysqlItemWriter" processor="itemProcessor" commit-interval="10"/>
        </tasklet>
    </step>

    <!-- itemReader -->
    <beans:bean id="itemReader" class="org.springframework.batch.item.file.FlatFileItemReader" scope="step">
        <beans:property name="resource" value="#{jobParameters['fileName']}"/>
        <beans:property name="lineMapper">
            <beans:bean class="biblio.sentence.SentenceMapper"/>
        </beans:property>
    </beans:bean>

    <!-- itemProcessor -->
    <beans:bean id="itemProcessor" class="biblio.sentence.SentenceProcessor" />

    <!-- itemWriter -->
    <beans:bean id="mysqlItemWriter" class="biblio.sentence.SentenceWriter">
        <beans:property name="sentenceDao" ref="sentenceDao"/>
    </beans:bean>
</beans:beans>


